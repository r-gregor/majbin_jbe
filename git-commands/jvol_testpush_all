#! /usr/bin/env bash
# jvol_testpush_all
# last update: 20240821_jbe

USR="jbe"

export JBEVOLGITDIR="${HOME}/majstaf/${USR}git/vlpprs_${USR}"
export JBEVOLWORKDIR="${HOME}/majstaf/majvolpejpers"

jbeg_vol="/usr/bin/git --git-dir=${JBEVOLGITDIR} --work-tree=${JBEVOLWORKDIR}"

echo "[INFO] Testpush to d_GITHUB ..."
${jbeg_vol} push --dry-run git@github.com:r-gregor/vlpprs_${USR}.git main
echo "---"

echo "[INFO] Testpush to d_GITLAB ..."
${jbeg_vol} push --dry-run git@gitlab.com:r-gregor/vlpprs_${USR}.git main
echo "---"

